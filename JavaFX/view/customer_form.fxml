<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CustomerController" xmlns="http://javafx.com/javafx/8">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="txtName" promptText="Enter name"/>
    <TextField fx:id="txtAddress" promptText="Enter address"/>
    <TextField fx:id="txtSalary" promptText="Enter salary"/>

    <Button text="Save" onAction="#btnSaveOnAction"/>
</VBox>